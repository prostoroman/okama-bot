[flake8]
max-line-length = 127
max-complexity = 15
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache
ignore = 
    E203,
    W503,
    E501,
    F401,
    F403,
    F405,
    E722,
    W291,
    W293,
    E301,
    E302,
    E303,
    E305,
    E306,
    E402,
    E128,
    E226,
    F541,
    F601,
    F841,
    W292,
    C901
per-file-ignores =
    __init__.py:F401,F403
    tests/*:E501,E302,E305
