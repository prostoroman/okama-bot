# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# YandexGPT API Configuration (get from https://cloud.yandex.com/)
YANDEX_API_KEY=your_yandex_api_key_here
YANDEX_FOLDER_ID=your_yandex_folder_id_here

# Bot Configuration (optional)
BOT_USERNAME=your_bot_username

ADMIN_USER_ID=your_telegram_user_id

# Chart Style Configuration (optional)
# Options: 'nordic' (единственный доступный стиль)
CHART_STYLE=nordic

# Tushare API Configuration (for Chinese stock exchanges)
# Get your API key from https://tushare.pro/
TUSHARE_API_KEY=your_tushare_api_key_here

# Gemini API Configuration (for chart analysis)
# Get your API key from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Rate Limiting Configuration
# Per-user limits (targeting ~30/day softly)
DAILY_TARGET=30
BUCKET_CAPACITY=5
# Global anti-burst limits
GLOBAL_BUCKET_CAPACITY=50
GLOBAL_REFILL_RATE_TPS=5.0
# Rate limiting messages
BLOCK_MESSAGE_USER=Слишком часто. Подождите ~{wait:.1f} сек.
BLOCK_MESSAGE_GLOBAL=Сервис занят. Подождите ~{wait:.1f} сек.

# Support Configuration
SUPPORT_GROUP_ID=-1003121714572
SUPPORT_THREAD_ID=your_support_thread_id_here

# Botality Analytics Configuration
# Get your token from https://botality.cc/
BOTALITY_TOKEN=46422ed2-e3b1-4c71-846a-81694cf2b18c

# Subscription and Payment Configuration
# Database path for storing user subscriptions
SUBSCRIPTION_DB_PATH=/var/data/bot.db

# Pro subscription pricing and duration (Telegram Stars only)
PRO_PRICE_STARS=1000
PRO_DURATION_DAYS=30

# Telegram Stars Payment Mode
# Set to 'true' for testing payments in development
# Set to 'false' for production payments
STARS_TEST_MODE=false
